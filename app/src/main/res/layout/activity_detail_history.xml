<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:contentPadding="10dp"
    app:cardElevation="5dp"
    tools:context=".Activity.Detail.DetailHistory">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Product: "
                android:textColor="@android:color/holo_red_light"
                app:fontFamily="monospace"/>
            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lorem ipsum"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description :"
                app:fontFamily="monospace"
                android:textColor="@android:color/holo_red_light"/>
            <TextView
                android:id="@+id/tvProductDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lorem ipsum dolor sit amet. lae wa rei de visca cipto le vanto re siska"
                android:textAlignment="viewStart"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status :"
                app:fontFamily="monospace"
                android:textColor="@android:color/holo_red_light"/>
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lorem ipsum dolor sit amet. lae wa rei de visca cipto le vanto re siska"
                android:textAlignment="viewStart"
                android:textStyle="bold"/>


            <TextView
                android:textStyle="bold"
                android:id="@+id/tvkodebooking"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="kode booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvSelesai"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Transaksi anda sudah selesai, \n Terima kasih"/>

            <ImageView
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/imageViewBitmap"
                android:layout_width="250dp"
                android:layout_height="250dp"/>

        </LinearLayout>

    </ScrollView>

</android.support.v7.widget.CardView>